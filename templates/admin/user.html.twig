{% extends 'base.html.twig' %}
{% block head %}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">{% endblock %}
{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}

    <div class="jumbotron">
    <h1>Liste des utilisateurs</h1>
    <table>
        <thead>
        <th>ID</th>
        <th>Email</th>
        <th>Rôles</th>
        <th>Actions</th>
        </thead>
        <tbody>
        {# On boucle sur les utilisateurs #}
        {% for user in user %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {# On boucle sur les rôles #}
                    {% for role in user.roles %}
                        {% if role == "ROLE_USER" %}
                            Utilisateur
                        {% elseif role == "ROLE_ADMIN" %}
                            Administrateur
                        {% endif %}
                    {% endfor %}
                </td>

                <td><a href="{{ path('admin_modifier_utilisateur', {'id': user.id}) }}" class="btn btn-primary">Modifier</a></td>
            </tr>

        {% else %}
            <p>Aucun utilisateur inscrit</p>
        {% endfor %}

        </tbody>
    </table>
    </div>
{% endblock %}
