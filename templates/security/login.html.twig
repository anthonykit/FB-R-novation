{% extends "base.html.twig" %}



{% block body %}
    <div class="jumbotron">
        <h1>Connexion!</h1>
            <form action="{{ path("security_login") }}" method="post">
                <div class="form-group">
                    <label for name="_username">Adresse Email</label>
                        <input aria-label="Adresse mail" placeholder="Adresse Email" required name="_username"
                        type="text" class="form-control">
                            <div class="form-group">
                                <label for name="_password"> Mot de passe</label>
                                <input aria-label="Mot de passe" placeholder="Mot de passe" required name="_password"
                                type="password" class="form-control">
                            </div>
                <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion</button>
                </div>
                </div>
</form>
    </div>
{% endblock %}