{% extends 'base.html.twig' %}
{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}
{% block body %}
<div class="jumbotron text-center">
<h1> 
    {% if editMode %}
        Modifier un Article!
    {% else %}
        Création d'un Article!
    {% endif %}
</h1>
    {% if app.user %}
    {{ form_start(formArticle) }}
    {{ form_row(formArticle.title,{'label':'Titre','attr':{'placeholder':"Titre de l'article"}}) }}
    {{ form_row(formArticle.content,{'label':'Contenu','attr':{'placeholder':"Contenu de l'article"}}) }}
    {{ form_row(formArticle.image,{'label':'Choisissez votre image'}) }}
    <button type="submit" class="btn btn-success">
        {% if editMode %}
        Modifier
        {% else %}
        Ajouter l'article
        {% endif %}
    </button>
    {{ form_end(formArticle)}}
    {% else %}
        <h4>Pour pouvoir creer un "Article", veuillez vous connecter. Inscrivez vous si cela n'est pas déjà fait!  </h4>
        <br>
        <a href="{{ path('security_login') }}" class="btn btn-primary">Connexion</a>
        <br>
        <br>
        <a href="{{ path('security_registration') }}" class="btn btn-success">Inscrivez vous!</a>
    {% endif %}
</div>

{% endblock %}
